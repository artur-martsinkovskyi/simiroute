.columns
  .column.col-4.col-mx-auto
    .panel{style: "padding: 1em"}
      .panel-header
        .panel-title
          %h2.text-center= t(".title")
      .panel-nav
        %p.text-center= t(".description")
      .panel-body
        = form_for :password, url: passwords_path, html: { class: "form-horizontal" } do |form|
          .form-group
            .col-12
              = form.label :email, class: "form-label"
            .col-12
              = form.text_field :email, class: "form-input"
          .form-group
            .col-2.col-mx-auto
              = form.submit nil, class: "btn btn-primary"

